@model MediaLibrary.Models.CreateFilmViewModel
@using Microsoft.AspNetCore.Identity
@*@inject SignInManager<IdentityUser>*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="~/css/js/kickstart.js"></script>
<link rel="stylesheet" href="~/css/css/kickstart.css" media="all" />
@{
    ViewData["Title"] = "CreateFilm";
}

<h1>Add Film</h1>

<h4>Welke film wil je toevoegen?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFilm" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Regisseur" class="control-label"></label>
                <input asp-for="Regisseur" class="form-control" />
                <span asp-validation-for="Regisseur" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="Hidden"></label>
                    <input asp-for="Hidden" type="checkbox" />
                </div>
            }
            <div class="form-group">
                <label asp-for="Foto"></label>
                <input class="form-control" asp-for="Foto" />
                <span class="text-danger" asp-validation-for="Foto"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="MediaCreate" asp-controller="Home">Back</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
